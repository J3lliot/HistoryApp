<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Heading"
        android:layout_width="342sp"
        android:layout_height="46sp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32dp"
        android:text="The History App"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/numberEnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="250sp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Enter Age"
        android:textAlignment="center"
        android:inputType="number"
        android:minHeight="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading" />

    <Button
        android:id="@+id/confirmGuess"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginStart="103dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#000000"
        android:text="Submit!"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberEnt" />

    <Button
        android:id="@+id/clearGuess"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="48sp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#000000"
        android:text="Clear!"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberEnt" />

    <TextView
        android:id="@+id/displayHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text=""

        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/numberEnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading" />

</androidx.constraintlayout.widget.ConstraintLayout>